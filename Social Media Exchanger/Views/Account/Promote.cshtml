@model Social_Media_Exchanger.ViewModels.PromoteViewModel

@{
    ViewBag.Title = "Promote";
}

<h2>Promote your site and earn more points</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Your refferal link</h3>
                </div>
                <div class="panel-body">
                    http://localhost:50129/Account/Register/@Model.Username 
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        Points
                    </th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.Refferals.Count; i++)
            {
                <tr>
                    <td>@Model.Refferals[i].</td>
                    <td></td>
                </tr>
            }
        </table>
     </div>
    </div>
</div>